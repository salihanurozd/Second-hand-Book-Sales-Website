@model IEnumerable<KitaplikApp.Models.KitapDurumlari>

@{
    ViewData["Title"] = "Kitap Durumları";
}

<h1>Kitap Durumları</h1>

<p>
    <a asp-action="Upsert" class="btn btn-primary">Yeni Kitap Durumu Ekle</a>
</p>
<table class="table table-striped table-hover mt-3">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DurumAdi)
            </th>
            <th class="text-end">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DurumAdi)
                </td>
                <td class="text-end">
                    <a asp-action="Upsert" asp-route-id="@item.DurumId" class="btn btn-sm btn-warning me-2">Düzenle</a> 
                    <a asp-action="Details" asp-route-id="@item.DurumId" class="btn btn-sm btn-info me-2">Detaylar</a> 
                    <a asp-action="Delete" asp-route-id="@item.DurumId" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info mt-4" role="alert">
        Henüz hiç kitap durumu bulunmamaktadır. Yeni bir kitap durumu ekleyerek başlayabilirsiniz.
    </div>
}