@model IEnumerable<KitaplikApp.Models.Kitaplar>
@using System.Security.Claims;

@{
    ViewData["Title"] = "Ana Sayfa";
}

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div id="statusMessageContainer" class="mt-3">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["SuccessMessage"]
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["ErrorMessage"]
                </div>
            }
        </div>

        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @if (Model != null && Model.Any())
            {
                var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
                var isUserOrSeller = User.IsInRole("Kullanici") || User.IsInRole("Satici");
                
                @foreach (var kitap in Model)
                {
                    <div class="col mb-5">
                        <div class="card h-100">
                            @if (kitap.Fiyat < 60)
                            {
                                <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">İndirim!</div>
                            }
                            
                            <a asp-controller="Kitaplar" asp-action="Details" asp-route-id="@kitap.KitapId">
                                <div class="card-img-top-container text-center p-3" style="height: 200px; overflow: hidden; display: flex; align-items: center; justify-content: center;">
                                    @{
                                        var imageUrl = (kitap.KitapGorselleri != null && kitap.KitapGorselleri.Any())
                                                        ? kitap.KitapGorselleri.OrderBy(g => g.GosterimSirasi).FirstOrDefault()?.ResimUrl
                                                        : "/images/no-image-available.png";
                                    }
                                    <img class="card-img-top img-fluid"
                                         src="@imageUrl"
                                         alt="@kitap.Baslik Kapağı"
                                         style="max-height: 100%; width: auto; object-fit: contain;"
                                    />
                                </div>
                            </a>

                            <div class="card-body p-4">
                                <div class="text-center">
                                    <h5 class="fw-bolder">@kitap.Baslik</h5>
                                    
                                    <div class="d-flex justify-content-center small text-warning mb-2">
                                        @{
                                            double averageRating = (kitap.Yorumlars != null && kitap.Yorumlars.Any()) ? kitap.Yorumlars.Average(y => y.Puan) : 0;
                                            int fullStars = (int)Math.Floor(averageRating);
                                            bool hasHalfStar = (averageRating - fullStars) >= 0.5;
                                            int emptyStars = 5 - fullStars - (hasHalfStar ? 1 : 0);
                                        }
                                        @for (int i = 0; i < fullStars; i++)
                                        {
                                            <div class="bi-star-fill"></div>
                                        }
                                        @if (hasHalfStar)
                                        {
                                            <div class="bi-star-half"></div>
                                        }
                                        @for (int i = 0; i < emptyStars; i++)
                                        {
                                            <div class="bi-star"></div>
                                        }
                                    </div>
                                    
                                    @kitap.Fiyat.ToString("F2") TL
                                    <br />
                                    <small>Yazar: @(kitap.Yazar?.YazarAdi ?? "Bilinmiyor")</small>
                                    <br />
                                    <small>Durum: @(kitap.KitapDurumu?.DurumAdi ?? "Bilinmiyor")</small>
                                </div>
                            </div>
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center">
                                    <a class="btn btn-outline-dark mt-auto"
                                       asp-controller="Kitaplar"
                                       asp-action="Details"
                                       asp-route-id="@kitap.KitapId">
                                       Detayları Görüntüle
                                    </a>
                                    
                                    @if (isUserOrSeller && (User.IsInRole("Kullanici") || (User.IsInRole("Satici") && kitap.SaticiKullaniciId.ToString() != currentUserId)))
                                    {
                                        <form class="addToCartForm d-block mt-2">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="kitapId" value="@kitap.KitapId" />
                                            <input type="hidden" name="miktar" value="1" />
                                            <button type="submit" class="btn btn-success mt-auto w-100">Sepete Ekle</button>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center">
                    <p>Henüz hiç kitap bulunmamaktadır.</p>
                </div>
            }
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.addToCartForm').submit(function (e) {
                e.preventDefault();

                var form = $(this);
                var url = '@Url.Action("AddItem", "Sepetler")'; 
                var formData = form.serialize();

                $.ajax({
                    type: 'POST',
                    url: url,
                    data: formData,
                    success: function (response) {
                        var statusMessageContainer = $('#statusMessageContainer');
                        statusMessageContainer.empty();

                        if (response.success) {
                            statusMessageContainer.append('<div class="alert alert-success mt-3" role="alert">' + response.message + '</div>');
                        } else {
                            statusMessageContainer.append('<div class="alert alert-danger mt-3" role="alert">' + response.message + '</div>');
                        }

                        setTimeout(function () {
                            statusMessageContainer.empty();
                        }, 5000);
                    },
                    error: function (xhr, status, error) {
                        var statusMessageContainer = $('#statusMessageContainer');
                        statusMessageContainer.empty();
                        statusMessageContainer.append('<div class="alert alert-danger mt-3" role="alert">Bir hata oluştu: ' + error + '</div>');
                        setTimeout(function () {
                            statusMessageContainer.empty();
                        }, 5000);
                        console.error('AJAX Hatası:', error);
                    }
                });
            });
        });
    </script>
}