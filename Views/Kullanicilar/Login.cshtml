@model dynamic
@{
    ViewData["Title"] = "Giriş Yap";
    var returnUrl = ViewData["ReturnUrl"] as string;
}

<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Giriş Yap</p>

                @if (!string.IsNullOrEmpty(TempData["SuccessMessage"] as string))
                {
                    <div class="alert alert-success" role="alert">
                        @TempData["SuccessMessage"]
                    </div>
                }
                @if (!string.IsNullOrEmpty(TempData["ErrorMessage"] as string))
                {
                    <div class="alert alert-danger" role="alert">
                        @TempData["ErrorMessage"]
                    </div>
                }

                @* Model hatalarını göstermek için *@
                <div asp-validation-summary="All" class="text-danger"></div>

                <form class="mx-1 mx-md-4" asp-action="Login" method="post" asp-route-returnUrl="@returnUrl">
                    @Html.AntiForgeryToken()

                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                        <div data-mdb-input-init class="form-outline flex-fill mb-0">
                            <input type="email" name="eposta" id="formLoginEposta" class="form-control" required/>
                            <label class="form-label" for="formLoginEposta">E-posta</label>
                        </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                        <div data-mdb-input-init class="form-outline flex-fill mb-0">
                            <input type="password" name="sifre" id="formLoginSifre" class="form-control" required/>
                            <label class="form-label" for="formLoginSifre">Şifre</label>
                        </div>
                    </div>

                    @* Buraya yeni kod eklendi *@
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="form-check">
                            <input class="form-check-input me-2" type="checkbox" value="true" name="IsPersistent" id="form2Example3"/> 
                            <label class="form-check-label" for="form2Example3">
                                Beni Hatırla
                            </label>
                        </div>
                        <a asp-controller="Kullanicilar" asp-action="SifremiUnuttum">Şifremi Unuttum?</a>
                    </div>
                    

                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                        <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg">Giriş Yap</button>
                    </div>
                </form>

                <p class="text-center mt-3">Hesabınız yok mu? <a asp-controller="Kullanicilar" asp-action="Register">Kaydolun</a></p>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                  class="img-fluid" alt="Sample image">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>