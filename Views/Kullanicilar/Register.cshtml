@model KitaplikApp.Models.Kullanicilar

@{
    ViewData["Title"] = "Kayıt Ol";
}

<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Kaydol</p>

                @* Model hatalarını göstermek için *@
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <form class="mx-1 mx-md-4" asp-action="Register"> 
                    @Html.AntiForgeryToken()

                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                        <div data-mdb-input-init class="form-outline flex-fill mb-0">
                            <input asp-for="Ad" type="text" id="formAd" class="form-control" />
                            <label class="form-label" for="formAd">Adınız</label> 
                            <span asp-validation-for="Ad" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                        <div data-mdb-input-init class="form-outline flex-fill mb-0">
                            <input asp-for="Soyad" type="text" id="formSoyad" class="form-control" />
                            <label class="form-label" for="formSoyad">Soyadınız</label> 
                            <span asp-validation-for="Soyad" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                        <div data-mdb-input-init class="form-outline flex-fill mb-0">
                            <input asp-for="Eposta" type="email" id="formEposta" class="form-control" />
                            <label class="form-label" for="formEposta">E-posta Adresiniz</label> 
                            <span asp-validation-for="Eposta" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                        <div data-mdb-input-init class="form-outline flex-fill mb-0">
                            <input asp-for="Sifre" type="password" id="formSifre" class="form-control" />
                            <label class="form-label" for="formSifre">Şifreniz</label>
                            <span asp-validation-for="Sifre" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-phone fa-lg me-3 fa-fw"></i>
                        <div data-mdb-input-init class="form-outline flex-fill mb-0">
                            <input asp-for="TelefonNumarasi" type="tel" id="formTelefon" class="form-control" />
                            <label class="form-label" for="formTelefon">Telefon Numarası (İsteğe Bağlı)</label>
                            <span asp-validation-for="TelefonNumarasi" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-check d-flex justify-content-center mb-5">
                        <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3c" required/> 
                        <label class="form-check-label" for="form2Example3c">
                            <a href="#!">Hizmet şartlarını</a> kabul ediyorum.
                        </label>
                    </div>

                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                        <button type="reset" data-mdb-button-init data-mdb-ripple-init class="btn btn-secondary btn-lg">Sıfırla</button> 
                        <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg ms-2">Kaydol</button>
                    </div>
                </form>

                <p class="text-center mt-3">Zaten bir hesabınız var mı? <a asp-controller="Kullanicilar" asp-action="Login">Giriş Yap</a></p>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                  class="img-fluid" alt="Sample image">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}