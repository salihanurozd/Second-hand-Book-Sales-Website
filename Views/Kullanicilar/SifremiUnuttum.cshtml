@{
    ViewData["Title"] = "Şifremi Unuttum";
}

<h1>Şifremi Unuttum</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        @if (!string.IsNullOrEmpty(TempData["SuccessMessage"] as string))
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (!string.IsNullOrEmpty(TempData["ErrorMessage"] as string))
        {
            <div class="alert alert-danger" role="alert">
                @TempData["ErrorMessage"]
            </div>
        }
        
        <p>Hesabınızla ilişkili e-posta adresini girin, şifrenizi sıfırlamanız için bir bağlantı göndereceğiz.</p>
        
        <form asp-action="SifremiUnuttum" method="post">
            <div class="form-group">
                <label for="eposta" class="control-label">E-posta</label>
                <input id="eposta" name="eposta" class="form-control" required />
            </div>
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Gönder</button>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Login">Giriş Sayfasına Geri Dön</a>
</div>