@model KitaplikApp.Models.Kullanicilar 
@{
    ViewData["Title"] = "Kayıt Ol";
}

<h1>Kayıt Ol</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-controller="Account" asp-action="Register" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="Eposta" class="control-label"></label>
                <input asp-for="Eposta" class="form-control" />
                <span asp-validation-for="Eposta" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Sifre" class="control-label"></label>
                <input asp-for="Sifre" type="password" class="form-control" />
                <span asp-validation-for="Sifre" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="SifreTekrar" class="control-label">Şifre Tekrar</label>
                <input id="SifreTekrar" name="SifreTekrar" type="password" class="form-control" />
                <span data-valmsg-for="SifreTekrar" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Ad" class="control-label"></label>
                <input asp-for="Ad" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Soyad" class="control-label"></label>
                <input asp-for="Soyad" class="form-control" />
                <span asp-validation-for="Soyad" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="TelefonNumarasi" class="control-label"></label>
                <input asp-for="TelefonNumarasi" class="form-control" />
                <span asp-validation-for="TelefonNumarasi" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">Kaydol</button>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <p>Zaten bir hesabınız var mı? <a asp-action="Login">Giriş Yap</a></p>
    <a asp-action="Index" asp-controller="Home">Ana Sayfaya Geri Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}