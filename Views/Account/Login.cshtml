@model dynamic

@{
    ViewData["Title"] = "Giriş Yap";
}

<h1>Giriş Yap</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group">
                <label for="eposta" class="control-label">E-posta</label>
                <input id="eposta" name="eposta" class="form-control" /> 
            </div>
            <div class="form-group mt-3">
                <label for="sifre" class="control-label">Şifre</label>
                <input type="password" id="sifre" name="sifre" class="form-control" />
            </div>
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Giriş Yap</button>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" asp-controller="Home">Ana Sayfaya Geri Dön</a>
</div>